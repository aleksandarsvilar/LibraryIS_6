@{
    ViewData["Title"] = "Author";
}

@model Author

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Author</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-controller="Author" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>