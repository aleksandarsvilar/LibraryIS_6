@{
    ViewData["Title"] = "Member";
}

@model IEnumerable<Member>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Members</h2>
        </div>
         <div class="col-6 text-end">
            <a asp-controller="Member" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Member
            </a>
        </div>
    </div>

    <br />

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Search item: <input type="text" name="SearchString" value=@ViewData["SearchString"] />

                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Email address
                </th>
                <th>
                    Phone number
                </th>
                <th>
                    Registration date
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="15%">
                        @obj.FirstName
                    </td>
                    <td width="15%">
                        @obj.LastName
                    </td>
                    <td width="20%">
                        @obj.Address
                    </td>
                    <td width="20%">
                        @obj.EmailAddress
                    </td>
                    <td width="15%">
                        @obj.PhoneNumber
                    </td>
                    <td width="30%">
                        @obj.RegistrationDate
                    </td>
                    <td width="10%">
                        <div class="w-100 btn-group text-right" role="group">

                            <a asp-controller="Member" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2 btn-sm" style="width:100px"> <i class="bi bi-pencil-square"></i> Edit</a>

                            <a asp-controller="Member" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2 btn-sm" style="width:100px"> <i class="bi bi-trash"> </i> Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>