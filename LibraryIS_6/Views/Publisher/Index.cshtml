@{
    ViewData["Title"] = "Publisher";
}

@model IEnumerable<Publisher> 

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List of Publishers</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Publisher" asp-action="Create" class="btn btn-primary">
                  <i class="bi bi-plus-circle"></i> &nbsp; Add New Publisher
                </a>
            @*<a asp-controller="Book" asp-action="List" class="btn btn-secondary" style="width:150px">Back to List</a>*@
        </div>
        </div>

    <br />

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Search item: <input type="text" name="SearchString" value=@ViewData["SearchString"] />

                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    <br />

    <table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width = "70%">
                    @obj.Name
                </td>
                <td class="text-center" width="20%">
                    <div class="w-50 btn-group" role="group">
                      
                     <a asp-controller="Publisher" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2 btn-sm"> <i class="bi bi-pencil-square"></i> Edit</a>

                  @*  <a asp-controller="Publisher" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2 btn-sm" style="width:100px"> <i class="bi bi-trash"> </i> Delete</a> *@

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>