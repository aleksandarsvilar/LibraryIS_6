@{
    ViewData["Title"] = "Loan";
}

@model Loan

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Loan</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="InventoryId"></label>
            <input asp-for="InventoryId" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for=Member.FirstName></label>
            <input asp-for=Member.FirstName disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for=Member.LastName></label>
            <input asp-for=Member.LastName disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="LoanDate"></label>
            <input asp-for="LoanDate" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DueDate"></label>
            <input asp-for="DueDate" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</Button>
        <a asp-controller="Loan" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"></partial>
}