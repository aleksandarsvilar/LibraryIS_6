@{
    ViewData["Title"] = "Loan";
}

@model IEnumerable<Loan>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Loans</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Loan" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Loan
            </a>
            @*<a asp-controller="Book" asp-action="List" class="btn btn-secondary" style="width:150px">Back to List</a>*@
        </div>
    </div>
</div>

<br />
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Inventory ID
            </th>
            <th>
                Member Name
            </th>
            <th>
                Loan Date
            </th>
            <th>
                Due Date
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.InventoryId
                </td>
                <td width="15%">
                    @string.Format("{0} {1}", obj.Member.FirstName, obj.Member.LastName)
                </td>
                <td width="15%">
                    @obj.LoanDate
                </td>
                <td width="15%">
                    @obj.DueDate
                </td>
                <td width="15%">
                    <div class="w-100 btn-group text-right" role="group">

                        <a asp-controller="Loan" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2 btn-sm" style="width:100px"> <i class="bi bi-pencil-square"></i> Edit</a>

                        <a asp-controller="Loan" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2 btn-sm" style="width:100px"> <i class="bi bi-trash"> </i> Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>